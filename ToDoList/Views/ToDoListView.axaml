<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="250" d:DesignHeight="450"
             x:Class="ToDoList.Views.ToDoListView">
  <!-- A DockPanel control lays the child controls on the edges of the content zone 
       The children can then declare which edge they want to be laid out on using
       DockPanel.Dock.
       The DockPanel must have a control filling in the remaining content zone,
       the StackPanel fulfills this role. Orientation is vertical by default-->
  <DockPanel> 
    
    <Button DockPanel.Dock="Bottom"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Center">
      Add Item
    </Button>
    <StackPanel>
      <CheckBox Margin="4">Return cans</CheckBox>
      <CheckBox Margin="4">Get Enhancment Cores</CheckBox>
    </StackPanel>
    
  </DockPanel>
</UserControl>
